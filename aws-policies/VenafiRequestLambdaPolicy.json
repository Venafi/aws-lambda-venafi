{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "acm:DeleteCertificate",
        "acm-pca:GetCertificate",
        "logs:DescribeLogStreams",
        "dynamodb:ListTagsOfResource",
        "lambda:InvokeAsync",
        "lambda:GetFunctionConfiguration",
        "acm:RenewCertificate",
        "logs:CreateLogStream",
        "acm-pca:IssueCertificate",
        "acm:GetCertificate",
        "logs:GetLogEvents",
        "dynamodb:GetItem",
        "acm:ImportCertificate",
        "dynamodb:BatchGetItem",
        "acm:ExportCertificate",
        "dynamodb:BatchWriteItem",
        "logs:DescribeLogGroups",
        "dynamodb:ConditionCheckItem",
        "dynamodb:PutItem",
        "lambda:InvokeFunction",
        "lambda:GetFunction",
        "acm:UpdateCertificateOptions",
        "acm-pca:GetCertificateAuthorityCertificate",
        "lambda:UpdateFunctionConfiguration",
        "acm-pca:RevokeCertificate",
        "dynamodb:Scan",
        "dynamodb:Query",
        "dynamodb:UpdateItem",
        "logs:PutLogEvents",
        "acm:DescribeCertificate",
        "logs:GetLogGroupFields",
        "lambda:GetPolicy"
      ],
      "Resource": [
        "arn:aws:acm-pca:*:*:certificate-authority/*",
        "arn:aws:lambda:*:*:function:serverlessrepo-aws-private-VenafiCertRequestLambda-*",
        "arn:aws:lambda:*:*:function:serverlessrepo-aws-private-VenafiCertPolicyLambda-*",
        "arn:aws:logs:*:*:log-group:*:*:*",
        "arn:aws:logs:*:*:log-group:*Venafi*Lambda*",
        "arn:aws:acm:*:*:certificate/*",
        "arn:aws:dynamodb:*:*:table/VenafiCertPolicy"
      ]
    },
    {
      "Effect": "Allow",
      "Action": "acm:RequestCertificate",
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": "acm-pca:ListCertificateAuthorities",
      "Resource": "arn:aws:acm-pca:*:*:certificate-authority/*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "lambda:ListFunctions",
        "lambda:GetAccountSettings"
      ],
      "Resource": [
        "arn:aws:lambda:*:*:function:serverlessrepo-aws-private-VenafiCertRequestLambda-*"
      ]
    }
  ]
}